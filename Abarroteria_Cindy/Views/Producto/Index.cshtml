@model List<ProductoVm>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Insertar" method="get">
    <div class="row">
        <div class="col-md-12">
            @if (TempData["mensaje"] != null)
            {
                <div class="alert alert-warning alert-dismissable" role="alert">
                    <p> @TempData["mensaje"]</p>
                    <button type="button" class="close" data-dismiss="alert" aria-label="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Nuevo Registro" class="btn btn-success" style="color: #000; background-color: #0dcaf0; border-color: #0dcaf0;">
    </div>
</form>

@if (Model.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Precio Normal</th>
                    <th>Precio Mayorista</th>
                    <th>Categoría</th>
                    <th>Inventario</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.Descripcion</td>
                        <td>@item.Precio_Normal</td>
                        <td>@item.Precio_Mayorista</td>
                        <td>@item.Categoria.Nombre</td>
                        <td>@item.Inventario.Stock_Actual</td>
                        <td>
                            @Html.ActionLink("Editar", "Editar", "Producto", new { @Id_Producto = item.Id_Producto }, new { @class = "btn btn-info" })
                            @Html.ActionLink("Eliminar", "Eliminar", "Producto", new { @Id_Producto = item.Id_Producto }, new { @class = "btn btn-info" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p>No hay productos registrados.</p>
}

