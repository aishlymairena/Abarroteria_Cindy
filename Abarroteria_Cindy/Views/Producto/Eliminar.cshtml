@model ProductoVm
@{
    ViewData["Title"] = "Eliminar Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Eliminar Producto</h1>

    <div class="row">
        <form method="post" asp-action="Eliminar">
            <div class="row">
                <div class="danger">
                    @if (TempData["mensaje"] != null)
                    {
                        <div class="alert alert-warning alert-dismissible" role="alert">
                            <p> @TempData["mensaje"]</p>
                            <button type="button" class="close" data-dismiss="alert" aria-label="close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }
                </div>
            </div>
            <input asp-for="Id_Producto" type="hidden" class="form-control" />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" readonly />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" readonly />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Precio_Normal" class="control-label"></label>
                <input asp-for="Precio_Normal" class="form-control" readonly />
                <span asp-validation-for="Precio_Normal" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Precio_Mayorista" class="control-label"></label>
                <input asp-for="Precio_Mayorista" class="form-control" readonly />
                <span asp-validation-for="Precio_Mayorista" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Id_Categoria" class="control-label">Categoría</label>
                <select asp-for="Id_Categoria" class="form-control" asp-items="@(new SelectList(ViewBag.Categorias, "Id_Categoria", "Nombre"))"></select>
                <span asp-validation-for="Id_Categoria" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Eliminar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
