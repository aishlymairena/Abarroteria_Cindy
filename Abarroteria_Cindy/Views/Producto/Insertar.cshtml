@model ProductoVm
@{
    ViewData["Title"] = "Insertar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Nuevo Producto</h1>

    <div class="row">
        <form method="post" asp-action="Insertar">
            <div class="row">
                <div class="col-md-12">
                    @if (TempData["mensaje"] != null)
                    {
                        <div class="alert alert-warning alert-dismissible" role="alert">
                            <p> @TempData["mensaje"]</p>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }
                </div>
            </div>

            <div class="form-group">
                <label for="Nombre">Nombre:</label>
                <input id="Nombre" name="Nombre" type="text" class="form-control" />
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="Descripcion">Descripción:</label>
                <input id="Descripcion" name="Descripcion" type="text" class="form-control" />
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="PrecioDetalle">Precio de Detalle:</label>
                <input id="PrecioDetalle" name="Precio_Normal" type="number" class="form-control" />
                @Html.ValidationMessageFor(model => model.Precio_Normal, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="PrecioMayoreo">Precio de Mayoreo:</label>
                <input id="PrecioMayoreo" name="Precio_Mayorista" type="number" class="form-control" />
                @Html.ValidationMessageFor(model => model.Precio_Mayorista, "", new { @class = "text-danger" })
            </div>


            <div class="form-group">
                <label for="Categoria">Categoría:</label>
                <select id="Categoria" name="Id_Categoria" class="form-control">
                    @if (ViewBag.Categorias != null)
                    {
                        foreach (var categoria in ViewBag.Categorias)
                        {
                            <option value="@categoria.Id_Categoria">@categoria.Nombre</option>
                        }
                    }
                </select>
                @Html.ValidationMessageFor(model => model.Id_Categoria, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <input type="submit" value="Agregar" class="btn btn-success" style="background-color: #94D3F6; color: black;" />
            </div>
        </form>
    </div>
</div>
