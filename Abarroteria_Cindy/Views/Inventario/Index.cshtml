@model List<InventarioVm>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Insertar" method="get">
    <div class="row">
        <div class="col-md-12">
            @if (TempData["mensaje"] != null)
            {
                <div class="alert alert-warning alert-dismissable" role="alert">
                    <p> @TempData["mensaje"]</p>
                    <button type="button" class="close" data-dismiss="alert" aria-label="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Nuevo Registro" class="btn btn-success" style="color: #000; background-color: #0dcaf0; border-color: #0dcaf0;">
    </div>
</form>

@if (Model.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>ID Inventario</th>
                    <th>Cantidad</th>
                    <!-- Agrega aquí más encabezados si es necesario -->
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id_Inventario</td>
                        <td>@item.Stock_Maximo</td>
                        <!-- Agrega aquí más columnas si es necesario -->
                        <td>
                            @Html.ActionLink("Editar", "Editar", "Inventario", new { @Id_Inventario = item.Id_Inventario }, new { @class = "btn btn-info" })
                            @Html.ActionLink("Eliminar", "Eliminar", "Inventario", new { @Id_Inventario = item.Id_Inventario }, new { @class = "btn btn-info" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p>No hay registros de inventario.</p>
}
