@model Abarroteria_Cindy.Models.InventarioVm
@{
    ViewData["Title"] = "Eliminar Producto del Inventario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Eliminar Producto del Inventario</h1>

    <div class="row">
        <form method="post" asp-action="Eliminar">
            <div class="row">
                <div class="danger">
                    @if (TempData["mensaje"] != null)
                    {
                        <div class="alert alert-warning alert-dismissible" role="alert">
                            <p> @TempData["mensaje"]</p>
                            <button type="button" class="close" data-dismiss="alert" aria-label="close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }
                </div>
            </div>
            <input asp-for="Id_Inventario" type="hidden" class="form-control" />
            <div class="form-group">
                <label asp-for="Stock_Actual" class="control-label">Stock Actual</label>
                <input asp-for="Stock_Actual" class="form-control" readonly />
                <span asp-validation-for="Stock_Actual" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Stock_Minimo" class="control-label">Stock Mínimo</label>
                <input asp-for="Stock_Minimo" class="form-control" readonly />
                <span asp-validation-for="Stock_Minimo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Stock_Maximo" class="control-label">Stock Máximo</label>
                <input asp-for="Stock_Maximo" class="form-control" readonly />
                <span asp-validation-for="Stock_Maximo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Proveedor.Nombre" class="control-label">Proveedor</label>
                <input asp-for="Proveedor.Nombre" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="Producto.Nombre" class="control-label">Producto</label>
                <input asp-for="Producto.Nombre" class="form-control" readonly />
            </div>

            <div class="form-group">
                <input type="submit" value="Eliminar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
