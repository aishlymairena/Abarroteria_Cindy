@model List<DetalleVm>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>Index</h3>
<form asp-action="Insertar" method="get">
    <div class=" = " row">
        <div class="danger">
            @if (TempData["mensaje"] != null)
            {
                <div class="alert alert-warning alert-dismissable" role="alert">
                    <p> @TempData["mensaje"]</p>
                    <button type="button" class="close" data-dismiss="alert" aria-label="close">

                        <span aria-hidden="true">&times;</span>
                    </button>

                </div>
            }
        </div>
    </div>
    <div class="form-group">

        <input type="submit" value="Nuevo Registro" class="btn-success" style="color: #000; background-color: #0dcaf0; border-color: #0dcaf0;">

    </div>

    @if (Model.Count > 0)
    {
        <div class="ScrollB">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Producto</th>
                        <th>Cantidad</th>
                        <th>Precio</th>
                        <th>Total_Linea</th>
                        <th>Acciones</th>
                        
                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Producto.Nombre</td>
                            <td>@item.Cantidad</td>
                            <td>@item.Producto.Precio_Normal</td>
                            <td>@item.Total_Linea</td>
                            
                            
                            <td>
                                @Html.ActionLink("Editar", "Editar", "Detalle", new { @Id_Detalle_Factura = item.Id_Detalle_Factura }, new { @class = "btn btn-info" })
                                @Html.ActionLink("Eliminar", "Eliminar", "Detalle", new { @Id_Detalle_Factura = item.Id_Detalle_Factura }, new { @class = "btn btn-info" })
                            </td>

                        </tr>
                    }
                </tbody>


            </table>

        </div>
    }


</form>



