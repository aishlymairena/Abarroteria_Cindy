@model List<EmpleadoVm>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Insertar" method="get">
    <div class=" = " row">
        <div class="danger">
            @if (TempData["mensaje"] != null)
            {
                <div class="alert alert-warning alert-dismissable" role="alert">
                    <p> @TempData["mensaje"]</p>
                    <button type="button" class="close" data-dismiss="alert" aria-label="close">

                        <span aria-hidden="true">&times;</span>
                    </button>

                </div>
            }
        </div>
    </div>
    <div class="form-group">

        <input type="submit" value="Nuevo Registro" class="btn-success" style="color: #000; background-color: #0dcaf0; border-color: #0dcaf0;">

    </div>

    @if (Model.Count > 0)
    {
        <div class="ScrollB">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Fecha de Nacimiento</th>
                        <th>Telefono</th>
                        <th>DNI</th>
                        <th>Sexo</th>
                        <th>Direccion</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nombre</td>
                            <td>@item.Apellido</td>
                            <td>@item.Fecha_Nacimiento.ToString("yyyy-MM-dd")</td>
                            <td>@item.Telefono</td>
                            <td>@item.DNI</td>
                            <td>@item.Sexo</td>
                            <td>@item.Direccion</td>
                            <td>
                                @Html.ActionLink("Editar", "Editar", "Empleado", new { @Id_Empleado = item.Id_Empleado }, new { @class = "btn btn-info" })
                                @Html.ActionLink("Eliminar", "Eliminar", "Empleado", new { @Id_Empleado = item.Id_Empleado }, new { @class = "btn btn-info" })
                            </td>

                        </tr>
                    }
                </tbody>


            </table>

        </div>
    }


</form>

